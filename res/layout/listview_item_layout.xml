<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlShopInfoLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/WHITE"
    android:paddingRight="10dp" >

      <TextView
          android:id="@+id/tvShopName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:paddingTop="5dp"
          android:textStyle="bold"
          android:textSize="19sp"
          android:text="answer option"
          android:textColor="@android:color/black" />

      <ImageView
          android:id="@+id/imLocationIcon"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentTop="true"
          android:layout_marginLeft="22dp"
          android:layout_marginTop="8dp"
          android:src="@drawable/location_icon" />

      <ImageView
          android:id="@+id/ivSaparation"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_marginLeft="18dp"
          android:layout_toRightOf="@+id/imLocationIcon"
          android:src="@drawable/separation" />

      <TextView
          android:id="@+id/tvShopAddress"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBottom="@+id/ivSaparation"
          android:layout_alignParentRight="true"
          android:paddingTop="5dp"
          android:text="answer option"
          android:layout_marginBottom="4dp"
          android:textColor="@android:color/black" />

      <TextView
          android:id="@+id/tvDistance"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBottom="@+id/ivSaparation"
          android:layout_alignParentLeft="true"
          android:layout_alignRight="@+id/ivSaparation"
          android:layout_marginLeft="10dp"
          android:layout_marginBottom="4dp"
          android:textStyle="bold"
          android:text="6.30" />

</RelativeLayout>